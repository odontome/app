.ui-autocomplete {
  z-index: 1100;
}

/* Theme switcher styles */
#theme-toggle {
  display: flex;
  align-items: center;
  cursor: pointer;
}

#theme-icon {
  display: flex;
  align-items: center;
  margin-right: 0.5rem;
}

.theme-icon {
  width: 16px;
  height: 16px;
}

/* Smooth transition for theme changes */
body {
  transition: background-color 0.3s ease, color 0.3s ease;
}

.navbar, .card, .dropdown-menu, .page-wrapper {
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
}