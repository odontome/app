<nav>
<% if current_user %>
	<% unless current_user.roles.include?("superadmin") %>
		<ul id="navigation">
			<li><%= link_to _("Datebook"), datebook_url, :class => "dark" %></li>
			<li><%= link_to _("Patients"), patients_url, :class => "dark" %></li>
			<li><%= link_to _("My practice"), practice_url, :class => "dark" %></li>
		</ul>
		<div id="search-box">
			<%= text_field_tag("patient_search") %>
		</div>
		<ul id="navigation">
			<li><small><%= link_to _("Logout"), logout_url, :confirm => _("Are you sure?"), :class => "dark" %></small></li>
		</ul>
	<% else %>
		<ul id="navigation">
			<li><%= link_to _("Practices"), practices_url %></li>
			<li><%= link_to _("Logout"), logout_url %></li>
		</ul>
	<% end %>
<% end %>
</nav>

<script>
	$(function(){			
		// Patient search box (should be moved to the application.js if possible)
		$("#patient_search").autoSuggest("/patients.json", {startText: "<%=_('Enter the patient name or Unique Identifier')%>", minChars: 2, selectionLimit: 1, selectedValuesProp: "id", selectedItemProp: "fullname", searchObjProps: "uid,fullname", resultClick: function(data){ window.location.href = "/patients/" + data.attributes.id; }});
	});
	
</script>

