<!-- navbar -->
<header class="navbar-inverse" role="banner">
    <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <%= link_to (image_tag "logofull.png", :title => t(:home), :width => 120), root_path, :class => "navbar-brand" %>
    </div>
    <nav class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right-lg">
            <% if current_user %> 
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <%= t(:datebooks) %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <% @datebooks.each do |datebook| %>
                            <li><%= link_to is_current_datebook?(datebook.id) ? "#{datebook.name} âœ“" : datebook.name , datebook %></li>
                        <% end %>
                    </ul>
                </li>        
                <li><%= link_to t(:patients), patients_url %></li> 
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="<%= avatar_url(current_user.email, 24)%>" alt="contact" class="img-circle avatar" />
                    <%= current_user.firstname %> <b class="caret"></b></a>

                    <ul class="dropdown-menu">
                        <li class="dropdown-header"><%= t(:manage) %></li>
                        <% if user_is_admin? %>
                            <li><%= link_to t(:datebooks), datebooks_url %></li>
                        <% end %>
                        <li><%= link_to t(:doctors), doctors_url %></li>
                        <li><%= link_to t(:treatments), treatments_url %></li>
                        <li><%= link_to t(:users), users_url %></li>
                        <% if user_is_admin? %>
                            <li><%= link_to t(:practice_settings), practice_settings_url %></li>
                        <% end %>
                        <li class="divider"></li>
                        <li><%= link_to t(:profile), current_user %></li>
                        <li class="divider"></li>
                        <li><%= link_to t(:signout), logout_url %></li>
                    </ul>
                </li>
                <li class="hidden-xs hidden-sm">
                    <input class="search" type="text">
                </li>          
            <% end %>
        </ul>
    </nav>        
</header>
<!-- end navbar -->