<h1><%=_('Practice Settings')%></h1>

<%= form_for(@practice, :url => "/practices/#{@practice.id}", :method => :update) do |f| %>

  <% if @practice.errors.any? %>
    <div class="error">
      <% @practice.errors.full_messages.each do |msg| %>
        <%= msg %><br />
	  <% end %>
    </div>
  <% end %>

	<fieldset>
		<legend><%=_("Practice information")%></legend>
	  <p>
	    <%= f.text_field :name, :placeholder => _("Practice Name"), :title => _("Practice Name") %>
			<sub><%=_('("Great Smiles Dentists" or "John Peterson\'s")')%></sub>
	  </p>
	</fieldset>
	<fieldset>
		<legend><%=_("Language and Dates")%></legend>
	  <p>
			<%= f.label _("Preferred language") %>
			<%= f.select(:locale, [[_('English'),'en_US'],[_('Español'),'es_ES']], :title => _("Preferred language")) %>
	  </p>
	  <p>
			<%= f.label _("Time zone") %>
			<%= f.time_zone_select :timezone, ActiveSupport::TimeZone.all, :default => Time.zone.name, :title => _("Time zone") %></p>
	  </p>
	</fieldset>
	
	<%= f.submit(_("Save"), :class => "g-button") %>

<% end %>
	
	<hr />
	
	<h1><%=_("Plans and payments")%></h1>
	
	<fieldset>
		<ul id="list-items">
			<% PLANS.each do |plan, values| %>
					<% current_plan = true if @practice.plan_id == values['id']%>
					<li>
						<% if current_plan %><strong><% end %>
						<%=_("#{extract_text_from_gettext(values['name'])}")%> 
						<%= "— $" + values['price'].to_s unless values['id'].to_i == 1 %>
						<strong><%= "(#{_('Current plan')})" if current_plan %></strong><br />
						<% if current_plan %></strong><% end %>
						<sub><%=_("#{extract_text_from_gettext(values['description'])}")%></sub>
						<% unless current_plan %>
							<div class="pp_subscribe_button">
								<% if values['id'].to_i > 1 %>
									<% if @practice.plan_id > 1 %>
										<%= render :partial => "/paypal/#{values['button_partial']}" + "_change", :locals => { :custom => @practice.id} if @practice_users_count <= values['number_of_patients'].to_i  %>
									<% else %>
										<%= render :partial => "/paypal/#{values['button_partial']}", :locals => { :custom => @practice.id} %>
									<% end %>
								<% elsif @practice_users_count <= values['number_of_patients'].to_i %>
										<%= link_to _("Change to this Plan"), change_to_free_plan_url, :class => "g-button green", :style => "margin: 10px 10px 0 0;" %>
								<% end %>
							</div>
						<% else %>
							<div class="list-item"><%= @practice_users_count %> <%=_('patients')%><br />(<%= (values['number_of_patients'].to_i - @practice_users_count).to_s + " " + _("left")%>)</div>
						<% end %>
					</li>
			<% end %>
		</ul>

	</fieldset>
