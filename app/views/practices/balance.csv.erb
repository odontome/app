<%= CSV.generate(:col_sep => ";") do |csv|
  csv << [t(:name),t(:created_at), t(:notes), t(:amount)]
  @balances.each do |balance|
    # Sanitize notes to prevent CSV injection
    safe_notes = balance[:notes].to_s.gsub(/[=+@-]/, '') if balance[:notes]
    csv << [ "#{balance[:firstname]} #{balance[:lastname]}", l(balance[:created_at], :format => :long), safe_notes, balance[:amount]]
  end
end.html_safe %>
