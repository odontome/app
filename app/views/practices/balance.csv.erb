<%= CSV.generate(:col_sep => ";") do |csv|
  csv << [t(:name),t(:created_at), t(:notes), t("payments.attributes.currency"), t(:amount)]
  @balances.each do |balance|
    csv << [ "#{balance[:firstname]} #{balance[:lastname]}", l(balance[:created_at], :format => :long), balance[:notes], balance[:currency], balance[:amount]]
  end
end.html_safe %>
