<div id="pad-wrapper" class="user-profile">
    <!-- header -->
    <div class="row header">
        <div class="col-md-8">
            <img src="<%= avatar_url(@user.email,'100x100')%>" alt="contact" class="avatar img-circle" data-toggle="tooltip" title="<%= t :gravatar_tooltip %>" data-placement="bottom" />
            <h3 class="name"><%= @user.fullname %></h3>
            <span class="area">
            	<% if !@user.last_login_at.nil? %>
            		<%= t :last_login_at_with_date, date:(time_ago_in_words @user.last_login_at) %>
            	<% else %>
            		<%= t :never_logged_in %>
            	<% end %>
            </span>
        </div>
        
    	<div class="pull-right doctor-status">
			<% if user_is_admin?(@user) %>
				<%= label_tag @user.roles %>
			<% end %>
		</div>

    </div>

