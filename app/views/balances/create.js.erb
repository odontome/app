$("#patient_balance > tbody").append("<%=escape_javascript(render :partial => 'show', :locals => {:balance => @balance})%>");

// Clear the fields
$('[type=number],textarea').val("");

// Highlight the new total
$("tfoot td:last-child").html("<%=escape_javascript(link_to number_to_currency_with_currency(@total), patient_balances_path(:format => :csv), :class => 'g-button', :title => _('Download balance in CSV'))%>");
$("tfoot").effect("highlight", {}, 3000);