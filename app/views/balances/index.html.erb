<table id="patient_balance" class="ui-tabs ui-widget ui-widget-content ui-corner-all balance">
	<thead>
		<tr>
			<th width="70%"><%=_("Notes")%></th>
			<th width="15%"><%=_("Expenses")%></th>
			<th width="15%"><%=_("Income")%></th>			
		</tr>
	</thead>
	<tbody>
	<% @balances.each do |balance| %>
		<%= render :partial => "show", :locals => {:balance => balance}%>
	<% end %>
	</tbody>
	<tfoot>
		<td colspan="3" align="right"><%=link_to number_to_currency_with_currency(@total), patient_balances_path(:format => :csv), :class => "g-button", :title => _("Download balance in CSV") %></td>
	</tfoot>
</table>

<%= render "new" %>

<script type="text/javascript">
	$(document).ready(function() {
		// Limit the notes
		$('#balance_notes').limit('255');
		// tipTip all form fields
		$('input,textarea,big a').tipTip();
	});
</script>