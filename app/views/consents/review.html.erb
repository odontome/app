<div class="card card-md">
  <div class="card-body">
    <h2 class="card-title text-center mb-4"><%= t(:consent_review_title) %></h2>
    <p class="text-muted text-center"><%= t(:consent_review_description) %></p>

    <%= form_tag(consent_accept_path, method: :post) do %>
      <% if @needs_terms %>
        <div class="mb-3">
          <label class="form-check">
            <input type="checkbox" name="consent_terms" value="1" class="form-check-input" required>
            <span class="form-check-label">
              <%= raw t(:consent_terms_label, terms_url: link_to(t(:terms_of_service).downcase, "/terms", target: "_blank")) %>
            </span>
          </label>
        </div>
      <% end %>

      <% if @needs_privacy %>
        <div class="mb-3">
          <label class="form-check">
            <input type="checkbox" name="consent_privacy" value="1" class="form-check-input" required>
            <span class="form-check-label">
              <%= raw t(:consent_privacy_label, privacy_url: link_to(t(:privacy_policy).downcase, "/privacy", target: "_blank")) %>
            </span>
          </label>
        </div>
      <% end %>

      <div class="form-footer">
        <%= submit_tag t(:continue), class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
