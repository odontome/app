<%= form_tag([noteable, Note.new], :method => :post, :remote => true) do %>
	<fieldset>
	  <legend><%=_("Chart Notes")%></legend>
		<p>
		    <%= text_area_tag "note[notes]", nil, {:rows => 2, :placeholder => _("Special thoughts about this #{noteable.class}") }  %>
		</p>
	</fieldset>
	
	<%= submit_tag(_("Annotate"), :class => "button nice white", :disable_with => _("Please wait...")) %>
<% end %>

<script type="text/javascript">
	$(document).ready(function() {		
		// Limit the notes
		$('#note_notes').limit('500');
	});	
</script>
