<% form_tag([noteable, Note.new], :method => :post, :remote => true) do %>
	<p>
	    <%= text_area_tag "note[notes]", nil, {:rows => 2, :placeholder => _("Type something related to this #{noteable.class}"), :title => _("Type something related to this #{noteable.class}")}  %>
	</p>
	<%= submit_tag(_("Annotate"), :class => "g-button", :disable_with => _("Please wait...")) %>
<% end %>