<%= form_for(@user_session, :url => user_session_path) do |f| %>
	<% if @user_session.errors.any? %>
	  <div class="error">
	    <% @user_session.errors.full_messages.each do |msg| %>
	      <%= msg %><br />
	    <% end %>
	  </div>
	<% end %>
  <p>
    <%= f.email_field :email, :placeholder => _("Email"), :title => _("Email"), :autocapitalize => "off", :autocorrect => "off" %>
  </p>
	<p>
	  <%= f.password_field :password, :placeholder => _("Password"), :title => _("Password") %>
	</p>
  	
	<p>
		<%= f.check_box :remember_me %> <%= f.label _("Remember me") %>
	</p>

	<p>
		
	</p>
	
	<div id="toolbar">
    	<%= f.submit(_("Login"), :class => "g-button action") %>
 		<% if !@user_session.errors.any? %>
			<%=_("Don't have an account?")%> <%= link_to _("Sign up"), signup_url %>
		<% else %>
			<%= link_to _('Forgot your password?'), new_password_reset_path %>
		<% end %>
 	</div>

<% end %>