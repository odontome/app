<%= form_for(@user_session, :url => user_session_path) do |f| %>
	<% if @user_session.errors.any? %>
	  <div class="alert-box error">
	    <% @user_session.errors.full_messages.each do |msg| %>
	      <%= msg %><br />
	    <% end %>
	  </div>
	<% end %>
  <p>
    <%= f.email_field :email, :placeholder => t(:email), :autocapitalize => "off", :autocorrect => "off", :class => "input-text" %>
  </p>
	<p>
	  <%= f.password_field :password, :placeholder => t(:password), :class => "input-text" %>
	</p>
  	
	<p>
		<label for="user_session_remember_me">
			<%= f.check_box :remember_me %> <%= t :remember_me %>
		</label>
	</p>

	<p>
		
	</p>
	
	<div id="toolbar">
    	<%= f.submit(t(:signin), :class => "button nice blue") %>
 		<% if !@user_session.errors.any? %>
			<%= t :no_account %> <%= link_to t(:signup), signup_url %>
		<% else %>
			<%= link_to t(:forgot_password), new_password_reset_path %>
		<% end %>
 	</div>

<% end %>