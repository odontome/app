<h1><%=_('Sign in')%></h1>

<%= form_for(@user_session, :url => user_session_path) do |f| %>
	<% if @user_session.errors.any? %>
	  <div class="error">
	    <% @user_session.errors.full_messages.each do |msg| %>
	      <%= msg %><br />
	    <% end %>
	  </div>
	<% end %>
  <p>
    <%= f.email_field :email, :placeholder => _("Email"), :title => _("Email") %>
  </p>
	<p>
	  <%= f.password_field :password, :placeholder => _("Password"), :title => _("Password") %>
	</p>
  <p>
	  <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
    <%= f.submit("Login", :class => "g-button") %>
 	<%=_("Don't have an account?")%> <%= link_to _("Sign Up"), signup_url %>
<% end %>