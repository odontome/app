<% if @user_session.errors.any? %>
    <div class="alert alert-warning">
    <% @user_session.errors.full_messages.each do |msg| %>
        <%= msg %><br />
    <% end %>
    </div> 
<% end %>

<%= link_to (image_tag "logofull.png", :title => t(:home)), root_path, :class => "logo" %>

<div class="box">
    <div class="content-wrap">
        <%= form_for(@user_session, :url => user_session_path) do |f| %>
        
        <%= f.email_field :email, :placeholder => t(:email), :autocapitalize => "off", :autocorrect => "off", :class => "form-control" %>
        <%= f.password_field :password, :placeholder => t(:password), :class => "form-control" %>
        
        <%= link_to t(:forgot_password), new_password_reset_path, :class => "forgot" %>

        <div class="remember">
        	<label for="user_session_remember_me">
	            <%= f.check_box :remember_me %>
	            <%= t :remember_me %>
            </label>
        </div>

        <%= f.submit(t(:signin), :class => "btn btn-primary") %>

        <% end %>
    </div>
</div>

<div class="no-account">
    <p><%= t :no_account %> </p>
    <%= link_to t(:signup), signup_url %>
</div>