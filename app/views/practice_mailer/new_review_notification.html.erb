<tr>
  <td class="aligncenter content-block">
    <% (1..@review.score).each do |i| %>
      <%= image_tag "rating-star-filled@2x.png", :width => 35 %>
    <% end %>
    <% (1..(5-@review.score)).each do |i| %>
      <%= image_tag "rating-star@2x.png", :width => 35 %>
    <% end %>
  </td>
</tr>

<tr>
  <td class="aligncenter content-block">
    <i>"<%= sanitize(@review.comment, tags: %w[], attributes: %w[]) %>"</i>
  </td>
</tr>

<tr>
  <td class="content-block">
    <small>View more at <%= link_to "reviews", reviews_url %>.</small>
  </td>
</tr>
