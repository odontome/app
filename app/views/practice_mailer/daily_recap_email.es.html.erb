<h3>Resumen del d√≠a <%= l @date.to_date, :format => :day_and_date %></h3>

<% if !@appointments.nil? %>
	<h4><%= @appointments.size %> citas agendadas</h4>

	<ul>
		<% @appointments.each do |appointment| %>
			<li><%= "<strong>#{appointment['patient_firstname']} #{appointment['patient_lastname']}</strong> con #{appointment['doctor_firstname']} #{appointment['doctor_lastname']} <i>el #{l(appointment['starts_at'].to_time, :format => :short)} (#{appointment['name']}</i>"%></li>
		<% end %>
	</ul>
<% end %>

<% if !@patients.nil? %>
	<h4><%= @patients.size %> nuevos pacientes</h4>
	
	<table>
		<% @patients.each do |patient| %>
			<tr>
				<td width="60px"><img src="<%= avatar_url(patient['email'])%>" alt="contact" class="img-circle" width="50px" /></td>
				<td><%= link_to "#{patient['firstname']} #{patient['lastname']}", patient_url(:id => patient['id']) %></td>
			</tr>
		<% end %>
	</table>
<% end %>