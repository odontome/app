Daily recap for <%= l @date.in_time_zone(@practice_timezone).to_date, :format => :day_and_date %>

<% if !@balance.nil? %>
<%= t :balance %>
<%= number_to_currency @balance.first['amount'], :unit => @currency_unit %> processed yesterday
<% end %>

<% if !@appointments.nil? %>
<%= @appointments.size %> appointments scheduled
	<% @appointments.each do |appointment| %>
<%= "#{appointment['patient_firstname']} #{appointment['patient_lastname']} with #{appointment['doctor_firstname']} #{appointment['doctor_lastname']} at #{l appointment['starts_at'].to_time.in_time_zone(@practice_timezone), :format => :short}"%>
	<% end %>
<% end %>

<% if !@patients.nil? %>
<%= @patients.size %> patients added
	<% @patients.each do |patient| %>
<%= "#{patient['firstname']} #{patient['lastname']}" %> <%= url_for patient_url(:id => patient['id']) %>
	<% end %>
<% end %>
