<h1><%=_('Patients')%> <%= link_to "+", new_patient_url, :class => "g-button" %></h1>

<ul id="list-items">
	<% @patients.each do |patient| %>
		<li>
			<h2><%=link_to patient.fullname, patient%></h2>			
			<span><%=patient.uid%></span>
			<span><strong><%=_('Age')%>:</strong> <%=patient.age%></span>
			<span><strong><%=_('Allergies')%>:</strong> <%#=patient.chart.allergies%>TODO!</span>
			<span><strong><%=_('Last visit')%>:</strong> <%#=patient.chart.last_visit_at%>TODO!</span>
			<% if current_user_is_admin? %>
				<div class="list-item-button"><%= link_to _("Delete"), patient, :method => :delete, :confirm => "Are you sure? All data associated with this patient will be lost forever. THERE IS NO GOING BACK!", :class => "g-button red"%></div>
			<% end %>
			<div class="list-item-button"><%= link_to _("Edit"), edit_patient_path(patient), :class => "g-button"%></div>
		</li>
	<% end %>
</ul>

