<div id="tabs">
	
	<ul>
		<li><a href="#chart"><%=_("Chart")%></a></li>
		<li><a href="<%=appointments_patient_path(@patient) %>"><span><%=_("Appointments")%></span></a></li>
		<li><a href="<%=patient_balances_path(@patient) %>"><span><%=_("Balance")%></span></a></li>
	</ul>
	
	<div id="chart">
		
		<div class="bodycontent">	
			<h2><%=_('Personal information')%></h2>
			
			<% if @patient.uid %><p><label><%=_('Unique identifier')%>:</label> <%=@patient.uid%></p><% end %>
			<p><label><%=_('Name')%>:</label> <%=@patient.fullname%></p>
			<p><label><%=_('Age')%>:</label> <%=@patient.age%> (<%=l @patient.date_of_birth, :format => :long %>)</p>
			
			<h2><%=_('Contact information')%></h2>
			
			<p><label><%=_('Email')%>:</label> <%=@patient.email%></p>
			<p><label><%=_('Telephone')%>:</label> <%=@patient.telephone%></p>
			<p><label><%=_('Mobile')%>:</label> <%=@patient.mobile%></p>
			<p><label><%=_('Emergency telephone')%>:</label> <%=@patient.emergency_telephone%></p>
			<p><label><%=_('Address')%>:</label> <%=@patient.address%></p>			
		</div>
		
		<div class="sidecontent">
			<h2><%=_('Medical history')%></h2>
			
			<% if @patient.allergies %>
				<p class="error_field"><label><%=_('Allergic to')%>:</label> <%=@patient.allergies%></p>
			<% end %>
			<p><label><%=_('Past Illnesses')%>:</label> <%=@patient.past_illnesses%></p>
			<p><label><%=_('Past surgeries')%>:</label> <%=@patient.surgeries%></p>
			<p><label><%=_('Current medications')%>:</label> <%=@patient.medications%></p>
			<p><label><%=_('Cigarettes per day')%>:</label> <%=@patient.cigarettes_per_day%></p>
			<p><label><%=_('Drinks per day')%>:</label> <%=@patient.drinks_per_day%></p>
			<p><label><%=_('Drugs use')%>:</label> <%=@patient.drugs_use%></p>
			<p><label><%=_('Family history')%>:</label> <%=@patient.family_diseases%></p>
		</div>
				
		<div class="notes clear">
			<%= render :partial => "patient_notes/index", :locals => {:notes => @patient_notes} %>
		</div>
		
		<%= render "patient_notes/new" %>
	</div>

	<div style="clear:both"></div>
</div>

