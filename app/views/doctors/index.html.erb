<div class="row">	
	<% if @doctors.empty? %>
		<div class="alert-box warning"><%=_("You currently don't have any doctors in your practice. Remember that you need at least one doctor in order to create appointments.")%> <a href="" class="close">&times;</a></div>    
		</div>
	<% end %>
	
	<div class="eight columns">
		
		<h1><%=_('Doctors')%></h1>
		
		<ul id="list-items">
			<% @doctors.each do |doctor| %>
				<li>
					<h2>
						<% if !doctor.is_active %>
							<span class="red radius label"><%=_("Suspended")%></span>
						<% end %>
						<%= link_to doctor.fullname, doctor %>
					</h2>			
		
					<span><%=doctor.uid%></span>
					<span><strong><%=_('Speciality')%>:</strong> <%=doctor.speciality%></span>
				</li>
			<% end %>
		</ul>
	</div>
	
