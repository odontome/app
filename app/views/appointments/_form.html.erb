<%= form_for(@appointment, :remote => true) do |f| %>
	<p>		
		<%= f.label t :enter_patient_name_or_uid %>
		<%= text_field_tag "appointment[patient_id]", nil, :class => "input-text" %>
	</p>
	
	<div class="clear"></div>
	
	<p>
		<% if @doctors.empty? %>
			<%= link_to t(:no_doctors), doctors_path %>
		<% else %>
			<%= f.label t :doctor %>
			<%= f.select(:doctor_id, options_from_collection_for_select(@doctors, "id", "fullname", :selected => @appointment.doctor_id), :title => t(:select_doctor)) %>
		<% end %>
	</p>

	<p>
		<%= f.text_area :notes, :placeholder => t(:addtional_notes), :rows => 2, :limit => 255  %>
	</p>
	
	<%= f.submit(t(:save), :class => "button nice white", :disable_with => t(:please_wait)) %> 

	<% if controller.action_name == "edit" %> 
		<%= link_to t(:delete_appointment), @appointment, :method => :delete, :remote => :true, :confirm => t(:are_you_sure), "data-icon" => "-" %> 
	<% else %>
		<%= f.hidden_field :starts_at %>
	<% end %> 
	
	<a class="close-reveal-modal">&#215;</a>
<% end %>