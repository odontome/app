<%= render "form" %>

<script type="text/javascript">
	$(document).ready(function() {
		// Setup autocomplete for patients
		$("#appointment_patient_id").autoSuggest("/patients.json", {startText: "<%= t(:enter_patient_name_or_uid)%>", minChars: 2, selectionLimit: 1, selectedValuesProp: "id", selectedItemProp: "fullname", searchObjProps: "uid,fullname", emptyText: "<%= t(:no_patient_found_new_one_will_be_created)%>", asHtmlID: "patient_id"});
		
		// Limit the notes
		$('#appointment_notes').limit('255');
	});	
</script>
