<%= form_tag(patient_patient_treatments_path, :method => :post, :remote => true) do %>
	<table>
		<tr>
			<td>
				<%= select_tag("treatment_id", options_from_collection_for_select(treatments, "id", "name"), :title => _("Select a treatment")) %> 
			</td>
			<td>
			<%= select_tag("patient_treatment[tooth_number]", options_for_select(PatientTreatment::TEETH), :title => _("Tooth number")) %>
			</td>
			<td>
				<%= select_tag("patient_treatment[doctor_id]", options_from_collection_for_select(doctors, "id", "fullname"), :title => _("Select a doctor")) %> 
			</td>
			<td>
				<%= submit_tag(_("Add treatment"), :class => "g-button action", :disable_with => _("Please wait...")) %>
			</td>
		</tr>
	</table>
<% end %>

<script type="text/javascript">
	$(document).ready(function() {
		// tipTip all form fields
		$('input,select').tipTip();
	});
</script>