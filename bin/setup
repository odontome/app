#!/bin/bash

echo -e '\033[32m ğŸ“ˆ  Standing your service up\033[0m'

ruby --version

if [ $? -eq 1 ]; then
    echo -e "\033[33m âš ï¸  Installing Ruby $(cat .ruby-version). This only needs to be done once per Ruby version. And it will take a while...\033[0m"
    brew update && brew upgrade ruby-build
    rbenv install `cat .ruby-version`

    if [ $? -ne 0 ]; then
        exit $?
    fi
else
    echo -e "\033[32m ğŸ’  Ruby $(cat .ruby-version) is installed.\033[0m"
fi

echo -e '\033[32m âš™ï¸  Installing Brew dependencies...\033[0m'
brew bundle

echo -e '\033[32m âš™ï¸  Installing gems...\033[0m'
bundle install

if [ $? -eq 127 ]; then
    echo -e "\033[33m âš ï¸  Installing gem 'bundler' for Ruby $(cat .ruby-version). This only needs to be done once per Ruby version.\033[0m"
    gem install bundler --conservative && bundle install

    if [ $? -ne 0 ]; then
        exit $?
    fi
fi

echo -e '\033[32m ğŸ—„  Checking database tables...\033[0m'
bundle exec rake db:setup

if [ $? -eq 1 ]; then
    echo -e '\033[33m âš ï¸  Running pending migrations\033[0m'
    bundle exec rake db:migrate

    if [ $? -ne 0 ]; then
        exit $?
    fi
fi

echo -e '\033[32m âœ…  Done!\033[0m'
echo -e '\033[36m â€¢ bundle exec rails c # Runs REPL\033[0m'
echo -e '\033[36m â€¢ bundle exec rails s # Runs web server\033[0m'